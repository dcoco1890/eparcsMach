<div class="jumbotron">
    <p class="display-4">Richmond NBC12 News Scraper</p>
    <form action="/api/scrape" style="display: inline; margin: 0 auto;">
        <div class="btn-group">
            <button class="btn btn-outline-secondary">SCRAPE NEW</button>
        </div>
    </form>
</div>
<section class="container-fluid">
    <div class="content">
        <div class="row">
            <div class="col-sm-2" id="o"> </div>
            <div class="col-sm-8">
                <h3>Recent Articles</h3>
            </div>
            <div class="col-sm-2" id="p"> </div>
        </div>
        <div class="row">
            {{#each Article}}
            <div class="box" data-id={{this.id}}>
                <div id="head">
                    <p id="art-tit">{{this.title}}</p>
                </div>
                <div class="art-bod">

                </div>
                <div class="d-flex justify-content-end">
                    <a id="lin" href={{this.link}}>LINK</a>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>